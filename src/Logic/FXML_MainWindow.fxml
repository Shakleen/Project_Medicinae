<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane fx:id="pane" alignment="CENTER_RIGHT" hgap="20" stylesheets="@CSS_MainWindow.css"
          vgap="20" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.172-ea" fx:controller="Logic.C_MainWindow">

    <!-- Button for adding information -->
    <Button fx:id="FX_Button_Insert" minHeight="75" minWidth="250" text="Insert Information" GridPane.columnIndex="1" GridPane.rowIndex="1">
        <graphic>
            <ImageView fx:id="FX_ImageView_InsertInfo" />
        </graphic>
    </Button>

    <!-- Button for viewing information -->
    <Button fx:id="FX_Button_View" minHeight="75" minWidth="250" text="View Information" GridPane.columnIndex="1" GridPane.rowIndex="2">
        <graphic>
            <ImageView fx:id="FX_ImageView_ViewInfo" />
        </graphic>
    </Button>

    <!-- Button for syncing information -->
    <Button minHeight="75" minWidth="250" text="Sync Information" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <graphic>
            <ImageView fx:id="FX_ImageView_SyncInfo" />
        </graphic>
    </Button>

    <!-- Button for looking up help -->
    <Button minHeight="75" minWidth="250" text="Help" GridPane.columnIndex="1" GridPane.rowIndex="4">
        <graphic>
            <ImageView fx:id="FX_ImageView_Help" />
        </graphic>
    </Button>

    <!-- Button for logging in -->
    <Button minHeight="75" minWidth="250" text="Account Info" GridPane.columnIndex="1" GridPane.rowIndex="5">
        <graphic>
            <ImageView fx:id="FX_ImageView_Account" />
        </graphic>
    </Button>

    <!-- Button for exiting -->
    <Button minHeight="75" minWidth="250" text="Exit App" GridPane.columnIndex="1" GridPane.rowIndex="6">
        <graphic>
            <ImageView fx:id="FX_ImageView_Exit" />
        </graphic>
    </Button>
</GridPane>
